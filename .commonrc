# Paths
function addPath {
	local newPath="${1}"

	if [ -d "${newPath}" ]; then
		if ! echo "${PATH}" | grep -q "${newPath}"; then
			PATH="${PATH}:${newPath}"
		fi
	fi
}

if command -v yazi > /dev/null; then
	function y() {
		local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
		yazi "$@" --cwd-file="$tmp"
		if cwd="$(command cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
			builtin cd -- "$cwd"
		fi
		rm -f -- "$tmp"
	}
fi

if command -v mutt > /dev/null; then
	function muttf() {
		# Move to Downloads so that attachments are saved there
		pushd "${HOME}/Downloads"
		if [[ $# == 0 ]]; then
			mutt
		else
			local config="${HOME}/.config/mutt/muttrc_${1}"
			if [[ -r "${config}" ]]; then
				mutt -F "${config}"
			else
				echo "Invalid config: ${config}. No file or no access."
			fi
		fi
		popd
	}
fi

function dotfiles() {
	# Define the git-dir and work-tree
	local git_dir="$HOME/.dotfiles/"
	local work_tree="$HOME"

	# Handle git bash
	if [[ -x /usr/bin/git ]]; then
		git_cmd=/usr/bin/git
	elif [[ -x /mingw64/bin/git ]]; then
		git_cmd=/mingw64/bin/git
	fi


	# Check if the first argument is "add"
	if [[ "$1" == "add" && -d "${2}" ]]; then
		# Shift the first argument and prepend "-u" to the remaining arguments
		local dir="${2}"
		shift 2
		$git_cmd --git-dir="$git_dir" --work-tree="$work_tree" add -u "${dir}" "$@"
	else
		# Pass all arguments through for other commands
		$git_cmd --git-dir="$git_dir" --work-tree="$work_tree" "$@"
	fi
}

