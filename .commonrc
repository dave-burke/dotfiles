#Functions
if ! command -v watch > /dev/null; then
	# Implement a simple replacement
	function watch {
		if ! command -v ${1}; then
			echo "Nothing to watch"
			return
		else
			while true; do
				clear
				${@}
				sleep 2
			done
		fi
	}
fi
