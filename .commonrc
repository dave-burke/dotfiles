#for gnu screen
function s {
	if [[ -z $1 ]]; then
		screen -ls 2> /dev/null || echo "[No sessions]"
	else
		screen -r $@ 2> /dev/null || screen -S $@
	fi
}

#for tmux
alias tmux='tmux -2' #Use 256 colors
function t {
	if [[ -z $1 ]]; then
		tmux ls 2> /dev/null || echo "[No sessions]"
	else
		tmux attach -t $@ 2> /dev/null
		if [[ $? -ne 0 ]]; then
			tmux new -s $@
		fi
	fi
}

