function addPath {
	local newPath="${1}"

	if [ -d "${newPath}" ]; then
		if ! echo "${PATH}" | grep -q "${newPath}"; then
			PATH="${PATH}:${newPath}"
		fi
	else
		echo "${newPath} is NOT a directory!"
	fi
}

